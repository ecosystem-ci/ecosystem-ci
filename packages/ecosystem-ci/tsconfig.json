{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": true,
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"ecosystem-ci": ["./types/index"],
			// internal use only
			"types": ["./types/internal"]
		},
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": [
		"scripts/**/*",
		"src/**/*",
		"types/**/*"
	]
}
